{"code":"import React, { useEffect, useRef, useState } from 'react';\r\nimport styled from 'styled-components';\r\nimport useScreen from '../../hooks/useScreen';\r\nimport { AvatarDao } from '../avatar';\r\nimport { ButtonIcon, ButtonText } from '../button';\r\nimport { Dropdown } from '../dropdown';\r\nimport { IconBlock, IconChevronDown, IconCommunity, IconCopy, IconFavoriteDefault, IconFavoriteSelected, IconFlag, } from '../icons';\r\nimport { Link } from '../link';\r\nimport { ListItemLink } from '../listItem';\r\nconst DEFAULT_LINES_SHOWN = 2;\r\nconst DEFAULT_LINKS_SHOWN = 3;\r\nexport const HeaderDao = ({ daoName, daoEnsName, daoAvatar, daoUrl, description, created_at, daoChain, daoType, favorited = false, links = [], translation, copiedOnClick, onFavoriteClick, }) => {\r\n    const [showAll, setShowAll] = useState(true);\r\n    const [shouldClamp, setShouldClamp] = useState(false);\r\n    const { isDesktop } = useScreen();\r\n    const descriptionRef = useRef(null);\r\n    // this should be extracted into a hook if clamping/showing elsewhere\r\n    useEffect(() => {\r\n        function countNumberOfLines() {\r\n            const descriptionEl = descriptionRef.current;\r\n            if (!descriptionEl)\r\n                return;\r\n            const numberOfLines = descriptionEl.offsetHeight /\r\n                parseFloat(getComputedStyle(descriptionEl).lineHeight);\r\n            setShouldClamp(numberOfLines > DEFAULT_LINES_SHOWN);\r\n            setShowAll(numberOfLines <= DEFAULT_LINES_SHOWN);\r\n        }\r\n        countNumberOfLines();\r\n        window.addEventListener('resize', countNumberOfLines);\r\n        return () => {\r\n            window.removeEventListener('resize', countNumberOfLines);\r\n        };\r\n    }, []);\r\n    // always show dropdown if there are links, unless we're on desktop with less than 3 links\r\n    const showDropdown = !(links?.length <= DEFAULT_LINKS_SHOWN && isDesktop) && links?.length !== 0;\r\n    return (React.createElement(Card, { \"data-testid\": \"header-dao\" },\r\n        React.createElement(ContentWrapper, null,\r\n            React.createElement(Content, null,\r\n                React.createElement(Title, null, daoName),\r\n                React.createElement(\"p\", { className: \"mt-0.25 desktop:mt-0.5 font-semibold text-ui-500\" }, daoEnsName),\r\n                React.createElement(Link, { label: daoUrl, iconRight: React.createElement(IconCopy, null), onClick: copiedOnClick, className: \"mt-1.5\" }),\r\n                React.createElement(\"div\", { className: \"mt-1.5\" },\r\n                    React.createElement(Description, Object.assign({ ref: descriptionRef }, { fullDescription: showAll }), description),\r\n                    shouldClamp && (React.createElement(Link, { label: showAll\r\n                            ? `${translation?.readLess || 'Read less'} ↑`\r\n                            : `${translation?.readMore || 'Read more'} ↓`, className: \"ft-text-base\", onClick: () => setShowAll(prevState => !prevState) })))),\r\n            React.createElement(AvatarContainer, null,\r\n                React.createElement(AvatarDao, Object.assign({ daoName: daoName || '', size: \"unset\", className: \"w-10 desktop:w-14 h-10 desktop:h-14 text-lg desktop:text-xl\" }, (daoAvatar && { src: daoAvatar }))))),\r\n        React.createElement(DetailsWrapper, null,\r\n            React.createElement(NetworkDetailsContainer, null,\r\n                React.createElement(NetworkDetails, null,\r\n                    React.createElement(IconFlag, { className: \"text-primary-400\" }),\r\n                    React.createElement(DetailsText, null, created_at)),\r\n                React.createElement(NetworkDetails, null,\r\n                    React.createElement(IconBlock, { className: \"text-primary-400\" }),\r\n                    React.createElement(DetailsText, { className: \"capitalize\" }, daoChain)),\r\n                React.createElement(NetworkDetails, null,\r\n                    React.createElement(IconCommunity, { className: \"text-primary-400\" }),\r\n                    React.createElement(DetailsText, null, daoType))),\r\n            React.createElement(ActionWrapper, null,\r\n                React.createElement(LinksWrapper, null, links\r\n                    ?.slice(0, DEFAULT_LINKS_SHOWN)\r\n                    ?.map(({ label, href }, index) => (React.createElement(Link, Object.assign({}, { label, href }, { external: true, key: index }))))),\r\n                React.createElement(ActionContainer, null,\r\n                    showDropdown && (React.createElement(Dropdown, { align: \"start\", trigger: React.createElement(ButtonText, { iconRight: React.createElement(IconChevronDown, null), label: 'All Links', mode: \"secondary\", size: \"large\", bgWhite: true }), sideOffset: 8, className: \"max-w-xs\", listItems: links?.map(({ label, href }, index) => ({\r\n                            component: (React.createElement(\"div\", { className: \"p-1 mb-1.5\" },\r\n                                React.createElement(ListItemLink, Object.assign({}, { label, href }, { key: index, external: true })))),\r\n                        })) })),\r\n                    React.createElement(ButtonIcon, { icon: favorited ? React.createElement(IconFavoriteSelected, null) : React.createElement(IconFavoriteDefault, null), onClick: onFavoriteClick, mode: \"secondary\", size: \"large\", bgWhite: true }))))));\r\n};\r\nconst Card = styled.div.attrs({\r\n    className: 'w-full bg-white tablet:rounded-xl p-2 tablet:p-3 desktop:p-6 border border-ui-100 space-y-3',\r\n}) `\n  box-shadow: 0px 4px 8px rgba(31, 41, 51, 0.04),\n    0px 0px 2px rgba(31, 41, 51, 0.06), 0px 0px 1px rgba(31, 41, 51, 0.04);\n`;\r\nconst ContentWrapper = styled.div.attrs({\r\n    className: 'flex justify-between grid grid-cols-12',\r\n}) ``;\r\nconst Content = styled.div.attrs({\r\n    className: 'col-span-10',\r\n}) ``;\r\nconst AvatarContainer = styled.div.attrs({\r\n    className: 'tablet:flex hidden justify-end col-span-2 desktop:items-center',\r\n}) ``;\r\nconst Title = styled.h1.attrs({\r\n    className: 'ft-text-3xl font-bold text-ui-800',\r\n}) ``;\r\nconst Description = styled.p.attrs({\r\n    className: 'font-medium text-ui-600 ft-text-base',\r\n}) `\n  overflow: hidden;\n  display: -webkit-box;\n  -webkit-box-orient: vertical;\n  -webkit-line-clamp: ${props => props.fullDescription ? 'unset' : DEFAULT_LINES_SHOWN};\n`;\r\nconst DetailsWrapper = styled.div.attrs({\r\n    className: 'flex items-center justify-between flex-col tablet:flex-row',\r\n}) ``;\r\nconst NetworkDetailsContainer = styled.div.attrs({\r\n    className: 'flex space-x-3 w-full tablet:w-auto',\r\n}) ``;\r\nconst NetworkDetails = styled.div.attrs({\r\n    className: 'flex space-x-1 items-center justify-center',\r\n}) ``;\r\nconst DetailsText = styled.span.attrs({\r\n    className: 'text-ui-600 ft-text-sm',\r\n}) ``;\r\nconst LinksWrapper = styled.div.attrs({\r\n    className: 'space-x-3 hidden desktop:flex',\r\n}) ``;\r\nconst ActionContainer = styled.div.attrs({\r\n    className: 'flex space-x-1.5 w-full justify-between',\r\n}) ``;\r\nconst ActionWrapper = styled.div.attrs({\r\n    className: 'flex items-center tablet:space-x-3 justify-between tablet:justify-start w-full tablet:w-max space-y-3 tablet:space-y-0',\r\n}) ``;\r\n//# sourceMappingURL=headerDao.js.map","references":["/root/repo/chainlink-spring-hackathon/frontend/node_modules/@types/react/index.d.ts","/root/repo/chainlink-spring-hackathon/frontend/node_modules/@types/styled-components/index.d.ts","/root/repo/chainlink-spring-hackathon/frontend/packages/ui-components/src/hooks/useScreen.ts","/root/repo/chainlink-spring-hackathon/frontend/packages/ui-components/src/components/avatar/index.ts","/root/repo/chainlink-spring-hackathon/frontend/packages/ui-components/src/components/button/index.ts","/root/repo/chainlink-spring-hackathon/frontend/packages/ui-components/src/components/dropdown/index.ts","/root/repo/