{"code":"import React, { useRef } from 'react';\r\nimport styled from 'styled-components';\r\nimport { ButtonIcon } from '../button';\r\nimport { IconAdd, IconRemove } from '../icons';\r\nexport const NumberInput = ({ mode = 'default', view = 'default', disabled, disableDecrement, disableIncrement, width, value, includeDecimal, onChange, ...props }) => {\r\n    const inputRef = useRef(null);\r\n    const handleStepperChange = (mode) => {\r\n        mode === 'up' ? inputRef.current?.stepUp() : inputRef.current?.stepDown();\r\n        // For Calling th onChange Function\r\n        inputRef.current?.dispatchEvent(new Event('input', { bubbles: true }));\r\n    };\r\n    const handleKeyDown = (event) => {\r\n        if (!includeDecimal && event.key === '.')\r\n            event?.preventDefault();\r\n        else\r\n            props.onKeyDown?.(event);\r\n    };\r\n    const handleChange = (event) => {\r\n        // this handles pasting in the value/ could also use onPaste event\r\n        if (!includeDecimal)\r\n            event.target.value = event.target.value.replace(/[^0-9]/g, '');\r\n        onChange?.(event);\r\n    };\r\n    // input width based on view\r\n    const inputWidth = {\r\n        bigger: 'w-8',\r\n        percentage: 'w-3.5',\r\n        default: 'w-full',\r\n    };\r\n    // input placeholder based on view\r\n    const placeholder = {\r\n        bigger: 'â‰¥0',\r\n        percentage: '0%',\r\n        default: '0',\r\n    };\r\n    // input range based on view\r\n    const inputRange = {\r\n        bigger: {\r\n            min: 0,\r\n        },\r\n        percentage: {\r\n            min: 0,\r\n            max: 100,\r\n        },\r\n        default: {},\r\n    };\r\n    return (React.createElement(Container, Object.assign({ \"data-testid\": \"number-input\" }, { mode, disabled, width }),\r\n        React.createElement(StyledIconButton, { name: \"down\", mode: \"secondary\", bgWhite: true, size: \"small\", icon: React.createElement(IconRemove, null), disabled: disabled || disableDecrement, onClick: () => handleStepperChange('down') }),\r\n        React.createElement(InputWrapper, null,\r\n            view === 'bigger' && value !== '' && (React.createElement(LeftAdornment, { disabled: disabled }, \"\\u2265\")),\r\n            React.createElement(StyledNumberInput, Object.assign({}, props, { value }, inputRange[view], { inputWidth: inputWidth[view], ref: inputRef, disabled: disabled, type: 'number', placeholder: placeholder[view], onChange: handleChange, onKeyDown: handleKeyDown, onWheel: e => {\r\n                    e.preventDefault();\r\n                    e.target.blur();\r\n                } })),\r\n            view === 'percentage' && value !== '' && (React.createElement(Percent, { disabled: disabled }, \"%\"))),\r\n        React.createElement(StyledIconButton, { name: \"up\", mode: \"secondary\", bgWhite: true, size: \"small\", icon: React.createElement(IconAdd, null), disabled: disabled || disableIncrement, onClick: () => handleStepperChange('up') })));\r\n};\r\nconst Container = styled.div.attrs(({ mode, disabled, width }) => {\r\n    let className = `${disabled ? 'bg-ui-100' : 'bg-ui-0'} inline-flex p-1 bg-ui-0 ${width ? '' : 'w-full'} focus:outline-none items-center h-6\r\n      focus-within:ring-2 focus-within:ring-primary-500 justify-between\r\n      rounded-xl hover:border-ui-300 border-2 active:border-primary-500\r\n      active:ring-0 \r\n    `;\r\n    if (mode === 'default') {\r\n        className += 'border-ui-100';\r\n    }\r\n    else if (mode === 'success') {\r\n        className += 'border-success-600';\r\n    }\r\n    else if (mode === 'warning') {\r\n        className += 'border-warning-600';\r\n    }\r\n    else if (mode === 'critical') {\r\n        className += 'border-critical-600';\r\n    }\r\n    return {\r\n        className,\r\n        ...(width && { style: { width: `${width}px` } }),\r\n    };\r\n}) ``;\r\nconst InputWrapper = styled.div.attrs({\r\n    className: 'flex justify-center w-4/5',\r\n}) ``;\r\nconst Percent = styled.label.attrs(({ disabled }) => {\r\n    const className = `${disabled ? 'text-ui-300' : 'text-ui-600'}`;\r\n    return {\r\n        className,\r\n    };\r\n}) ``;\r\nconst LeftAdornment = styled.label.attrs(({ disabled }) => {\r\n    const className = `${disabled ? 'text-ui-300' : 'text-ui-600'}`;\r\n    return {\r\n        className,\r\n    };\r\n}) ``;\r\nconst StyledNumberInput = styled.input.attrs(({ disabled, inputWidth }) => {\r\n    const className = `${disabled ? 'text-ui-300' : 'text-ui-600'} bg-transparent margin-0 ${inputWidth}`;\r\n    return {\r\n        className,\r\n    };\r\n}) `\r\n  text-align: center;\r\n  ::-webkit-inner-spin-button,\r\n  ::-webkit-outer-spin-button {\r\n    -webkit-appearance: none;\r\n    margin: 0;\r\n  }\r\n  -moz-appearance: textfield;\r\n\r\n  outline: 0;\r\n`;\r\nconst StyledIconButton = styled(ButtonIcon).attrs({\r\n    className: 'rounded-lg',\r\n}) ``;\r\n//# sourceMappingURL=numberInput.js.map","references":["/root/repo/chainlink-spring-hackathon/frontend/node_modules/@types/react/index.d.ts","/root/repo/chainlink-spring-hackathon/frontend/node_modules/@types/styled-components/index.d.ts","/root/repo/chainlink-spring-hackathon/frontend/packages/ui-components/src/components/button/index.ts","/root/repo/chainlink-spring-hackathon/frontend/packages/ui-components/src/components/icons/index.tsx"],"map":"{\"version\":3,\"file\":\"numberInput.js\",\"sourceRoot\":\"\",\"sources\":[\"../../../../../../src/components/input/numberInput.tsx\"],\"names\":[],\"mappings\":\"AAAA,OAAO,KAAK,EAAE,EAAC,MAAM,EAAC,MAAM,OAAO,CAAC;AACpC,OAAO,MAAM,MAAM,mBAAmB,CAAC;AAEvC,OAAO,EAAC,UAAU,EAAC,MAAM,WAAW,CAAC;AACrC,OAAO,EAAC,OAAO,EAAE,UAAU,EAAC,MAAM,UAAU,CAAC;AAkB7C,MAAM,CAAC,MAAM,WAAW,GAA+B,CAAC,EACtD,IAAI,GAAG,SAAS,EAChB,IAAI,GAAG,SAAS,EAChB,QAAQ,EACR,gBAAgB,EAChB,gBAAgB,EAChB,KAAK,EACL,KAAK,EACL,cAAc,EACd,QAAQ,EACR,GAAG,KAAK,EACT,EAAE,EAAE;IACH,MAAM,QAAQ,GAAG,MAAM,CAAmB,IAAI,CAAC,CAAC;IAEhD,MAAM,mBAA